# Theme variables. These assume that title background and borders have same color {{{
set $unfocused_border    $gb.dark0
set $unfocused_text      $gb.light0
set $unfocused_indicator $gb.faded_purple

set $inactive_border     $gb.dark4
set $inactive_text       $gb.light0
set $inactive_indicator  $gb.faded_purple

set $focused_border      $gb.neutral_orange
set $focused_text        $gb.light0
set $focused_indicator   $gb.neutral_purple

set $urgent_border       $gb.neutral_red
set $urgent_text         $gb.light0
# }}}

# <class>               <title_border> <title_background> <title_text> <next_window_indicator> <window_border>
client.unfocused        $unfocused_border $unfocused_border $unfocused_text $unfocused_indicator $unfocused_border
client.focused_inactive $inactive_border  $inactive_border  $inactive_text  $inactive_indicator  $inactive_border
client.focused          $focused_border   $focused_border   $focused_text   $focused_indicator   $focused_border
client.urgent           $urgent_border    $urgent_border    $urgent_text    $focused_indicator   $urgent_border
# }}}

# Bar {{{
bar {
	status_command i3status-rs
	# NOTE: must define nerd-monospace in fontconfig
	font nerd-monospace 11
	position bottom
	workspace_min_width 24
	# NOTE: Uncomment to disable tray
	# tray_output none
	wrap_scroll yes
	colors {
		background         $unfocused_border
		statusline         $unfocused_text
		separator          $gb.light2
		focused_workspace  $focused_border   $focused_border   $focused_text
		active_workspace   $focused_border   $unfocused_border $focused_text
		inactive_workspace $unfocused_border $unfocused_border $unfocused_text
	}
}
# }}}

