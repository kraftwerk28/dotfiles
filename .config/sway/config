# Cursor {{{
set $cursor_theme Adwaita
# set $cursor_theme xcursor-breeze
# set $cursor_theme xcursor-breeze-snow
# set $cursor_theme Bibata-Original-Classic
# set $cursor_theme /usr/share/icons/BreezeX-Black
set $cursor_size 28
seat * xcursor_theme $cursor_theme $cursor_size
exec_always {
	gsettings set org.gnome.desktop.interface cursor-theme $cursor_theme
	gsettings set org.gnome.desktop.interface cursor-size $cursor_size
	echo '[Icon Theme]\nInherits='$cursor_theme > $HOME/.icons/default/index.theme
}
