set $mod Mod4
set $left  h
set $down  j
set $up    k
set $right l
# set $cursor_theme "Adwaita"
set $cursor_theme "Simp1e-Gruvbox-Light"
# set $cursor_size 24
set $cursor_size 32
set $script "$HOME/.config/sway/scripts"
set $border_width 3

# output * background "$HOME/Pictures/pink_floyd_animals.png" fit
output * background "#000000" solid_color

floating_modifier $mod

# bindsym --to-code {
