#!/bin/bash
set -eo pipefail
if (( $(pgrep -x grimvshot | wc -l) > 2 )); then
	# Prevent running it multiple times
	exit 0
fi

usage () {
	echo \
		"Usage: $(basename "$0") [--notify] [--cursor] [--swaynag] [--copy]" \
		"[-o|--file <FILE>] [--output <OUTPUT>]" \
		"[--active|--area|--screen|--window]" >&2
	exit 1
}

get_focused_output() {
	swaymsg -t get_outputs | jq -r '.[] | select(.focused).name'
}

get_default_savefile() {
	echo "$(xdg-user-dir PICTURES)/grim-$(date -Ins).png"
}

optstr=$(getopt -o o: -l notify,swaynag,cursor,copy,file:,output:,active,area,screen,window,focused -- "$@")
eval set -- "$optstr"

while :; do
	case $1 in
		--notify) NOTIFY=1;;
		--swaynag) RUN_SWAYNAG=1;;
		--cursor) WITH_CURSOR=1;;
		--copy) COPY=1;;
		-o|--file) FILE=$2; shift;;
		--output) OUTPUT=$2; shift;;
		--active|--area|--screen|--window|--focused) ACTION=$1;;
		--) shift; break;;
	esac
	shift
done

[[ -z $ACTION ]] && usage

ALL_NODES='recurse(.nodes[], .floating_nodes[])'
TO_RECT='"\(.rect.x),\(.rect.y - .deco_rect.height) \(.rect.width)x\(.rect.height + .deco_rect.height)"'

case $ACTION in
	--area)
		bake="$(mktemp /tmp/grimvshot-XXXXXX.png)"
		grim -c -o "$(get_focused_output)" "$bake"
		imv -f "$bake" &
		IMV_PID=$!
		if ! GEOM="$(slurp)"; then
			kill "$IMV_PID"
			rm "$bake"
			exit
		fi
		;;
	--window)
		bake="$(mktemp /tmp/grimvshot-XXXXXX.png)"
		grim -c -o "$(get_focused_output)" "$bake"
		imv -f "$bake" &
		IMV_PID=$!
		if ! GEOM=$(swaymsg -t get_tree | jq -r "$ALL_NODES | select(.pid? and .visible?) | $TO_RECT" | slurp); then
			kill "$IMV_PID"
			rm "$bake"
			exit
		fi
		;;
	--active)
		GEOM="$(swaymsg -t get_tree | jq -r "$ALL_NODES | select(.focused) | $TO_RECT")";;
esac

if [[ -n $bake ]]; then
	rm "$bake"
fi

[[ -n $OUTPUT ]] && args+=(-o "$OUTPUT")
[[ -n $GEOM ]] && args+=(-g "$GEOM")

if [[ -n $RUN_SWAYNAG ]]; then
	TMPFILE="$(mktemp /tmp/grimvshot-XXXXXX.png)"
	FILE="$(get_default_savefile)"
	grim "${args[@]}" "$TMPFILE"
elif [[ -n $COPY ]]; then
	grim "${args[@]}" - | wl-copy
	echo "Screenshot copied to clipboard"
else
	FILE=${FILE:-$(get_default_savefile)}
	grim "${args[@]}" "$FILE"
	echo "Screenshot saved to $FILE"
fi

[[ -n $IMV_PID ]] && kill "$IMV_PID"

if [[ -n $RUN_SWAYNAG ]]; then
	case $(swaynag \
		-t warning \
		--no-dock \
		-y overlay \
		-m 'Choose action' \
		-Z Copy 'echo copy' \
		-Z Save 'echo save' \
		-Z Edit 'echo edit'
	) in
		copy) COPY=1; wl-copy < "$TMPFILE";;
		save) mv "$TMPFILE" "$FILE";;
		edit) exec swappy -f "$TMPFILE";;
		*) exit;;
	esac
fi

if [[ -n $NOTIFY ]]; then
	if [[ -n $COPY ]]; then
		notify-send "Screenshot copied to clipboard"
	else
		notify-send "Screenshot saved to $FILE"
	fi
fi
